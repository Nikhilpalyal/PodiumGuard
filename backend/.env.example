# PodiumGuard X Backend Environment Configuration

# ===== SERVER CONFIGURATION =====
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# ===== ETHEREUM NETWORK CONFIGURATION =====
ETHEREUM_NETWORK=sepolia
ETHEREUM_RPC_URL=wss://sepolia.infura.io/ws/v3/YOUR_INFURA_KEY
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# Replace with your actual private key for contract deployment and interaction
PRIVATE_KEY=0x1234567890123456789012345678901234567890123456789012345678901234

# ===== MONGODB CONFIGURATION =====
MONGODB_URI=mongodb://localhost:27017/podiumguard
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/podiumguard

# ===== AI ENGINE CONFIGURATION =====
AI_ENGINE_URL=http://localhost:5001
AI_TIMEOUT=5000
AI_RETRY_ATTEMPTS=3

# ===== MEV DETECTION THRESHOLDS =====
HIGH_RISK_THRESHOLD=75
SAFE_MODE_THRESHOLD=5
EMERGENCY_THRESHOLD=10
DETECTION_TIME_WINDOW=60
SAFE_MODE_COOLDOWN=300

# ===== MEMPOOL LISTENER CONFIGURATION =====
MIN_TRANSACTION_VALUE=0.001
GAS_THRESHOLD=50000

# ===== BLOCKCHAIN API CONFIGURATION =====
ETHERSCAN_API_KEY=YourEtherscanApiKeyToken
INFURA_PROJECT_ID=your-infura-project-id

# ===== AI CONFIGURATION =====
AI_MODEL_UPDATE_INTERVAL=3600000
FRAUD_DETECTION_THRESHOLD=0.85

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=info
# Possible values: error, warn, info, debug

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ===== WEBSOCKET CONFIGURATION =====
WS_CORS_ORIGIN=http://localhost:3000

# ===== SECURITY CONFIGURATION =====
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=12

# ===== PERFORMANCE MONITORING =====
REPORT_GAS=false
ENABLE_PERFORMANCE_MONITORING=true

# ===== DEVELOPMENT TOOLS =====
ENABLE_DEBUG_LOGS=false
MOCK_AI_RESPONSES=false
SIMULATE_HIGH_LOAD=false

# ===== SMART CONTRACT CONFIGURATION =====
CONTRACT_GAS_LIMIT=500000
CONTRACT_GAS_PRICE=20

# ===== BACKUP AND RECOVERY =====
BACKUP_INTERVAL_HOURS=24
ENABLE_AUTO_BACKUP=false
BACKUP_LOCATION=./backups

# ===== NOTIFICATION CONFIGURATION =====
ENABLE_EMAIL_ALERTS=false
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

ENABLE_SLACK_ALERTS=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

ENABLE_DISCORD_ALERTS=false
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# ===== EXTERNAL APIS =====
COINGECKO_API_KEY=your-coingecko-api-key
MORALIS_API_KEY=your-moralis-api-key

# ===== REDIS CONFIGURATION (for caching) =====
REDIS_URL=redis://localhost:6379
ENABLE_REDIS_CACHE=false

# ===== METRICS AND MONITORING =====
PROMETHEUS_PORT=9090
ENABLE_PROMETHEUS_METRICS=false

# ===== FEATURE FLAGS =====
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_ML_PREDICTIONS=false
ENABLE_HISTORICAL_ANALYSIS=true
ENABLE_REAL_TIME_ALERTS=true

# ===== DEVELOPMENT OVERRIDES =====
# Uncomment these for development/testing
# MOCK_BLOCKCHAIN_DATA=true
# USE_LOCAL_HARDHAT_NETWORK=true
# SKIP_CONTRACT_DEPLOYMENT=false